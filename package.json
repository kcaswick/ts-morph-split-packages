{
  "name": "ts-morph-split-packages",
  "version": "0.0.0-placeholder",
  "description": "Use dependency maps to break up TypeScript repos into smaller packages",
  "homepage": "",
  "author": {
    "name": "Kevin L Caswick",
    "email": "24442686+kcaswick@users.noreply.github.com"
  },
  "files": [
    "dist",
    "!**/__tests__"
  ],
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.mjs",
  "keywords": [
    "code refactor",
    "typescript",
    "dependency",
    "module",
    "dependencies"
  ],
  "scripts": {
    "build": "tsc -p ./ && npm run rollup",
    "pretest": "eslint .",
    "prepack": "zx -e \"let shell = require(`shelljs`); shell.mv(`package*.json`, `temp/`); shell.cp(`temp/package*.json`, `.`); require(`nerdbank-gitversioning`).setPackageVersion();\"",
    "postpack": "zx -e \"let shell = require(`shelljs`); shell.mv(`temp/package*.json`, `.`);\"",
    "prepare": "zx -e \"if(process.env.npm_command !== `pack`) {require(`husky`).install();} \"",
    "prettify": "prettier --write .",
    "rollup": "rollup -c rollup.config.mjs",
    "test": "jest"
  },
  "dependencies": {
    "dependency-cruiser": "^12.6.0",
    "fs-extra": "^11.1.0",
    "simple-git": "^3.16.0",
    "temp": "^0.9.4"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@ts-morph/bootstrap": "^0.18.0",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "27.5.1",
    "@types/node": "16.11.7",
    "@types/shelljs": "^0.8.11",
    "@types/temp": "^0.9.1",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.52.0",
    "eslint": "8.7.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-xo": "^0.27.2",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-expect-message": "^1.1.3",
    "jest-extended": "^3.1.0",
    "jest-junit": "^15.0.0",
    "lint-staged": "^12.3.2",
    "nerdbank-gitversioning": "^3.5.119",
    "prettier": "^2.7.1",
    "rollup": "^3.11.0",
    "rollup-plugin-dts": "^5.1.1",
    "shelljs": "^0.8.5",
    "ts-jest": "27.1.4",
    "ts-morph": "^13.0.3",
    "ts-morph-helpers": "^0.6.3",
    "typescript": "~4.5.5",
    "zx": "^7.1.1"
  },
  "optionalDependencies": {
    "@types/madge": "^5.0.0",
    "madge": "^5.0.2"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "$schema": "https://json.schemastore.org/eslintrc.json",
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2022,
      "project": "./tsconfig.json",
      "sourceType": "module",
      "warnOnUnsupportedTypeScriptVersion": false
    },
    "plugins": [
      "deprecation",
      "@typescript-eslint",
      "prettier",
      "simple-import-sort"
    ],
    "reportUnusedDisableDirectives": true,
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "@typescript-eslint/member-delimiter-style": [
        "error",
        {
          "multiline": {
            "delimiter": "semi",
            "requireLast": true
          },
          "singleline": {
            "delimiter": "semi",
            "requireLast": false
          }
        }
      ],
      "@typescript-eslint/naming-convention": "off",
      "@typescript-eslint/no-empty-interface": 0,
      "@typescript-eslint/no-floating-promises": "error",
      "@typescript-eslint/no-shadow": [
        "error",
        {
          "ignoreTypeValueShadow": true
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "ignoreRestSiblings": true,
          "varsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/prefer-namespace-keyword": "error",
      "@typescript-eslint/prefer-regexp-exec": "warn",
      "capitalized-comments": "off",
      "deprecation/deprecation": "error",
      "no-duplicate-imports": "error",
      "no-extra-semi": "error",
      "no-fallthrough": "error",
      "no-redeclare": "error",
      "no-return-await": "warn",
      "no-unused-vars": "off",
      "prettier/prettier": "warn",
      "require-await": "error",
      "semi": "error",
      "simple-import-sort/exports": "warn",
      "simple-import-sort/imports": "warn"
    }
  },
  "repository": "kcaswick/ts-morph-split-packages",
  "jest": {
    "testEnvironment": "node",
    "rootDir": "./lib",
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/../temp/test",
    "collectCoverageFrom": [
      "<rootDir>/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": "TS151001"
        }
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "temp/test",
          "outputName": "junit.xml"
        }
      ]
    ],
    "setupFilesAfterEnv": [
      "jest-expect-message"
    ],
    "testMatch": [
      "<rootDir>/**/lib/**/*.(spec|test).+(ts|js)?(x)",
      "<rootDir>/**/__tests__/**/*.(spec|test).+(ts|js)?(x)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "license": "MIT",
  "types": "dist/bundle.d.ts"
}
